export component MainWindow inherits Window {
    width: 1024px;
    height: 576px;
    title: "KiteVN";

    // 背景图（可替换）
    Image {
        source: @image-url("../background/bg.png");
        width: parent.width;
        height: parent.height;
    }

    // 半透明的对话框背景
    Rectangle {
        y: parent.height - 200px;
        width: parent.width;
        height: 200px;
        background: #0008; // 半透明黑色
    }

    // 对话文本
    Text {
        text: root.dialogue;
        x: 20px;
        y: parent.height - 180px;
        font-size: 24px;
        color: white;
    }

    // 鼠标点击区域（全屏）
    TouchArea {
        width: parent.width;
        height: parent.height;
        clicked => {root.clicked()}
    }

    // 状态绑定属性和事件
    in-out property<string> dialogue;
    callback clicked();
}
